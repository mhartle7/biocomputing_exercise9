library(ggplot2)
library(grid)
library(gridExtra)

datatxt <- read.table("data.txt", header = TRUE, sep = ",")
a = ggplot(data = datatxt, aes(x = aggregate( observations ~ region, data, mean ), y = region))
a + geom_bar() + coord_cartesian()

datatxt <- read.table("data.txt", header = TRUE, sep = ",")

a = ggplot(data = datatxt, aes(x = observations, y = region))
